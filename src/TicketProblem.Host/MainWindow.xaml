<controls:MetroWindow
    x:Class="TicketProblem.Host.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:host="clr-namespace:TicketProblem.Host"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    d:DataContext="{d:DesignInstance host:MainViewModel,
                                     d:IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ListBox
            Grid.Column="0"
            Margin="8"
            ItemsSource="{Binding Output}" />
        <StackPanel
            Grid.Column="1"
            Width="80"
            Margin="7"
            Orientation="Vertical">
            <TextBox Margin="5" Padding="2" />
            <Button
                Margin="5"
                Padding="2"
                Command="{Binding ComputeCommand}"
                Content="Process" />
            <Button
                Margin="5"
                Padding="2"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</controls:MetroWindow>
